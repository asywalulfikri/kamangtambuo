<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="MyCustomToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/text_color_white</item>
        <item name="android:textColorSecondary">@color/text_color_white</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.PullToRefresh.ProgressBar.Horizontal.Center" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">4dip</item>
        <item name="android:background">@color/instagram</item>
        <item name="android:maxHeight">4dip</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/edit_text_login</item>
    </style>

    <style name="EditText1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>
    <style name="TextCommon">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextCommon.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>


    <style name="Main2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonYellow">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="ButtonGreenNew">
        <item name="android:background">@drawable/corner_avatr</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/instagram_2</item>
    </style>


    <style name="TextCommon.Big">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
    <style name="TextCommon.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <style name="TextFloatsWhite">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textColorHint">@color/text_color_black</item>
        <item name="android:textColorHighlight">@color/text_color_black</item>
        <item name="android:textColorLink">@color/text_color_black</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>


    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>


    <style name="news_summary_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="news_summary_photo_iv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light"></style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/transparent</item>

    </style>


    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LoginStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLogin</item>
        <item name="colorPrimaryDark">@color/colorLogin</item>
        <item name="colorAccent">@color/colorLogin</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLogin</item>
        <item name="colorPrimaryDark">@color/colorLogin</item>
        <item name="colorAccent">@color/colorLogin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
