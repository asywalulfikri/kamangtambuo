<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_comment"
    android:padding="8dp">

    <asywalul.minang.wisatasumbar.widget.Rounded
            android:id="@+id/iv_avatar"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_profile_blank"  />

    <TextView
            android:id="@+id/tv_author"
            style="@style/TextCommon.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:maxLines="2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Suryati Suteja"
            android:textColor="@color/instagram" />

    <TextView
            android:id="@+id/tv_time"
            style="@style/TextCommon.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comment"
            android:layout_toRightOf="@+id/iv_avatar"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="3 jam yang lalu"
            android:textColor="@color/text_color_grey" />

    <com.luseen.autolinklibrary.AutoLinkTextView
            android:id="@+id/tv_comment"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/iv_more_action"
            android:paddingRight="2dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_author"
            android:textColor="@color/text_color_black"
            android:layout_toRightOf="@+id/iv_avatar"
            android:text="bladasd ada aslfvffvdkas asa asdad adas popos asda adpoekfsf " />

    <ImageView
        android:id="@+id/iv_more_action"
        android:layout_width="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_delete"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />


    <View
        android:id="@+id/dropdown"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_marginTop="8dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_time"
        android:background="@drawable/dropshadow" />


</RelativeLayout>