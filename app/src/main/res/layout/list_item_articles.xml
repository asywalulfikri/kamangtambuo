<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/bg_compose_response"
    android:layout_marginBottom="2dp"
    android:paddingBottom="5dp"
    app:cardCornerRadius="2dp">


    <RelativeLayout
        android:id="@+id/rl_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_location"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_photos"/>

        <TextView
            android:id="@+id/tv_title_resep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_location"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_toRightOf="@+id/iv_location"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_normal"
            android:text="Wisata Alam di TIku Boy"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_resep"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_location"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_small"
            android:text="科技是国之利器，中国人民生活要好，必须有强大科技。"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="@dimen/item_margin"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/font_tiny"
            android:text="05-28 20:09"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        style="@style/news_summary_card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/bg_compose_response"
        android:layout_marginBottom="2dp"
        android:paddingBottom="5dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/ll_root"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_summary_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_marginTop="@dimen/item_margin"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/text_color_black"
                android:textSize="16sp"
                android:text="Wisata sumatera barat adalah wisata teridah"/>

            <LinearLayout
                android:id="@+id/news_summary_photo_iv_group"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/news_summary_photo_iv_left"
                    style="@style/news_summary_photo_iv"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/news_summary_photo_iv_middle"
                    style="@style/news_summary_photo_iv"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/news_summary_photo_iv_right"
                    style="@style/news_summary_photo_iv"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_contentt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_below="@+id/tv_title_resep"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/iv_location"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/text_color_black"
                android:textSize="14sp"
                android:text="科技是国之 x cx cx cx cx xc c c 利器，中国人民生活要好，必须有强大科技。"/>

            <TextView
                android:id="@+id/news_summary_ptime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:paddingBottom="5dp"
                android:layout_marginRight="@dimen/item_margin"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/font_small"
                tools:text="05-28 20:09"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>