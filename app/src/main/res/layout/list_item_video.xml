<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView
    android:id="@+id/cv_category_parallax"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/bg_compose_response"
    android:layout_marginBottom="5dp"
    android:paddingBottom="5dp"
    card_view:cardCornerRadius="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/relativeLayout_over_youtube_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.youtube.player.YouTubeThumbnailView
            android:id="@+id/youtube_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"/>

        <ImageView android:id="@+id/btnYoutube_player"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_play"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_gradient_blue_down"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_title_category_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="VIDEO WISATA"
                android:textSize="18sp"
                android:textColor="@color/text_color_white"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/relativeLayout_over_youtube_thumbnail"
        android:layout_height="wrap_content">

        <asywalul.minang.wisatasumbar.widget.Rounded
            android:id="@+id/iv_logo"
            android:layout_marginBottom="5dp"
            android:layout_width="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:paddingBottom="10dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:textColor="@color/gray_deep"
            android:textSize="14dp"
            android:text="Asywalul"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/iv_logo"
            android:layout_toRightOf="@+id/iv_logo"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_visibility_black_24dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:id="@+id/iv_watch" />

            <TextView
                android:id="@+id/tv_play_time"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dp"
                android:text="10"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>